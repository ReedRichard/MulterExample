<h1>Contrived example of multer file up/download</h1>

<form action="/pictures/upload" method="POST" enctype="multipart/form-data">
    Select an image to upload:
    <input type="file" name="image">
    <input type="submit" value="Upload Image">
</form>



<form action="/picture/download" method="GET">
    Now that you uploaded a file, please type in the name including the extension to retrieve it:
    <input type="text" name="imageName">
    <input type="submit" value="Download Image">
</form>

<script>
    $(function () {
        // process the form
        $('#photoUpload').submit(function (event) {
            var formData = {
                'utter': $('input[name=utter]').val()
            };

            $.ajax({
                        type: 'POST',
                        url: '/utter',
                        data: formData,
                        dataType: 'json',
                        encode: true
                    })
                    .done(function (data) {
                        $("#successMessage").css("display", "block").fadeOut(1000);
                    }).error(function (error) {
                ("#errorMessage").css("display", "block").fadeOut(1000);
            });
            event.preventDefault();
        });
</script>